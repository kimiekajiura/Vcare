<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AttendanceListDialogshow"
    >

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choicespinner"
        android:layout_marginTop="4dp">

        <Spinner
            android:id="@+id/yearspinner"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/yeartextview"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="30dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="年" />

        <Spinner
            android:id="@+id/monthspinner"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/monthtextview"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="30dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="月" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:id="@+id/syainchoicespinner"
        android:layout_below="@+id/choicespinner">

        <Spinner
            android:id="@+id/syaincodespinner"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/syainnametextview"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:background="@drawable/view_style"
            android:text="社員名" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="表示"
            android:id="@+id/choicebutton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/attendancetextview"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/syainchoicespinner">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="日付"
            android:id="@+id/datelabelTextView"
            android:layout_marginRight="2dp"
            android:textColor="#ffff"
            android:background="@drawable/label_flame_style"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="出勤時刻"
            android:id="@+id/syukkinlabelTextView"
            android:layout_below="@+id/idTextView"
            android:layout_marginRight="2dp"
            android:textColor="#ffff"
            android:background="@drawable/label_flame_style"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="退勤時刻"
            android:id="@+id/taikinTextView"
            android:layout_marginRight="2dp"
            android:textColor="#ffff"
            android:background="@drawable/label_flame_style"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="備考"
            android:id="@+id/bikouTextView"
            android:textColor="#ffff"
            android:background="@drawable/label_flame_style"
            android:gravity="center"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attendancetextview"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:id="@+id/listView"
        android:layout_marginBottom="200dp">

    </ListView>

</RelativeLayout>