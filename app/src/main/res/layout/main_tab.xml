<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/main_content"
    tools:context=".Calendershow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choicespinner"
        android:layout_marginTop="4dp">

        <Spinner
            android:id="@+id/yearspinner"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/yeartextview"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="30dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="年" />

        <Spinner
            android:id="@+id/monthspinner"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/monthtextview"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="30dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="月" />

        <Button

            android:layout_alignParentEnd="true"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:id="@+id/bikouopenbutton"
            android:layout_below="@+id/stbutton"
            android:text="表示"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/smchoice"
        android:layout_below="@+id/choicespinner">

        <Spinner
            android:id="@+id/syaincodespinner"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/syainnametextview"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="40dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:background="@drawable/view_style"
            android:text="社員名" />

    </LinearLayout>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/smchoice"
        android:layout_marginTop="4dp"
        app:compactCalendarBackgroundColor="#EEFFFF"
        app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
        app:compactCalendarCurrentDayIndicatorStyle="fill_large_indicator"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#ffbd5f5f"
        app:compactCalendarEventIndicatorStyle="small_indicator"
        app:compactCalendarOtherMonthDaysTextColor="#534c4c"
        app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="true"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="#303F9F"
        app:compactCalendarTextSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewbutton"
        android:layout_below="@id/compactcalendar_view"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/prev_button"
            android:text="前月"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/compactcalendar_view"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/next_button"
            android:text="次月"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/compactcalendar_view"
            android:layout_alignLeft="@+id/stbutton"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monthbutton"
        android:layout_below="@+id/viewbutton"
        android:layout_marginTop="1dp">

        <Button
            android:id="@+id/create_button"
            android:text="新規登録"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewbutton"
            android:layout_alignLeft="@+id/stbutton"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/edit_button"
            android:text="修正"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewbutton"
            android:layout_alignLeft="@+id/stbutton"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/delete_button"
            android:text="削除"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewbutton"
            android:layout_alignLeft="@+id/stbutton"
            android:textColor="@color/colorPrimary"/>


    </LinearLayout>

    <ListView
        android:id="@+id/bookings_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/monthbutton">

    </ListView>


</RelativeLayout>